@using EntityLayer.Concreate
@model List<CallLog>
@{
    var x = ViewBag.userId;
    ViewBag.Title = "Cagrilar";
}
@if (Model.Count > 0)
{

    foreach (var item in Model)
    {
        <a class="headerDesign">@item.Customer.CustomerName MÜŞTERİSİNİN KAYITLARI </a>
    }

    <table class="table customTable">
        <thead class="thead-dark">
            <tr>

                <th> Çağrı Numarası</th>
                <th> Çağrı Açıklaması</th>
                <th> Çağrı Durumu</th>
                <th> Çağrı Olusturma Zamanı</th>
                <th width="300px"> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td> @item.CalllNumber </td>
                    <td> @item.CallLogDesc </td>
                    <td> @item.CallLogStatus </td>
                    <td> @item.CreatingTime </td>
                    <td>  <a class="btn btn-outline-success my-2 my-sm-0" href="/CallLog/Index/@item.CallLogId?persoId=@x">Detay</a> </td>

                </tr>
            }

        </tbody>


    </table>


}
else
{
    <br />
    <br />
    <a class="headerDesign">Bu müşteri hiç çağrı oluşturmamış</a>
}