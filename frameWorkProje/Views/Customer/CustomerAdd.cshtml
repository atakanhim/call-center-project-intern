@using EntityLayer.Concreate
@model Customer
@{
    ViewData["Title"] = "CustomerAdd";
}
@{
    var telefonno = ViewBag.tel;
}
<br />
<br />

<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Müşteri Ekle</p>

                                @using (Html.BeginForm("CustomerAdd", "Customer", FormMethod.Post, new { @class = "mx-1 mx-md-4" }))
                                {

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label style="display:block" class="form-label" for="form3Example1c">Müşteri Adı</label>
                                            <input style="display:inline" type="text" id="form3Example1c" name="CustomerName" class="form-control" />  <span style="color:red;font:14px italic">@Html.ValidationMessageFor(x => x.CustomerName)</span>

                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label style="display:block" class="form-label" asp-for="form3Example3c">Müşteri Adres</label>
                                            <input style="display:inline" type="text" id="form3Example3c" name="CustomerAddress" class="form-control" /> <span style="color:red;font:14px italic">@Html.ValidationMessageFor(x => x.CustomerAddress)</span>

                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example4c">Oluşturma Zamanı</label>
                                            <input type="datetime" id="form3Example4c" name="CustomerDate" value="@DateTime.UtcNow" readonly class="form-control" />

                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example4cd">Telefon no</label>
                                            <input type="text" id="form3Example4cd" name="CustomerPhone" value="@telefonno" readonly class="form-control" />

                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-outline-success my-2 my-sm-0">Müşteriyi Kaydet</button>
                                    </div>

                                }

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                     class="img-fluid" alt="Sample image" style="margin-left:-60px" width="800" height="500">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>






